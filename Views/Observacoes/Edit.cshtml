@model TrackIt.Models.Observacoes

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-white">
            <h1 class="mb-0">Editar Observação</h1>
        </div>
        <div class="card-body">
            <h4 class="mb-3">Observações</h4>
            <hr />
            <div class="row">
                <div class="col-md-6">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="ObservacoesId" />
                        <div class="form-group">
                            <label asp-for="ObservacoesDescricao" class="control-label"></label>
                            <input asp-for="ObservacoesDescricao" class="form-control" />
                            <span asp-validation-for="ObservacoesDescricao" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ObservacoesLocal" class="control-label"></label>
                            <input asp-for="ObservacoesLocal" class="form-control" />
                            <span asp-validation-for="ObservacoesLocal" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ObservacoesData" class="control-label"></label>
                            <input asp-for="ObservacoesData" class="form-control" />
                            <span asp-validation-for="ObservacoesData" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AnimalsId" class="control-label"></label>
                            <select asp-for="AnimalsId" class="form-control" asp-items="ViewBag.AnimalsId"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="UsuarioId" class="control-label"></label>
                            <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-footer bg-light text-right">
            <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
