@model TrackIt.Models.Usuario

@{
    ViewData["Title"] = "Deletar Usuário";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h1 class="mb-0">Deletar Usuário</h1>
        </div>
        <div class="card-body">
            <h4 class="mb-3">Confirmação de Exclusão</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Nome</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UsuarioNome)</dd>

                <dt class="col-sm-3">Telefone</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UsuarioTelefone)</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UsuarioEmail)</dd>

                <dt class="col-sm-3">Senha</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UsuarioSenha)</dd>
            </dl>
        </div>
        <div class="card-footer bg-light text-right">
            <form asp-action="Delete">
                <input type="hidden" asp-for="UsuarioId" />
                <p>Tem certeza que deseja deletar este usuário?</p>
                <button type="submit" class="btn btn-danger">Deletar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>
