@model IEnumerable<TrackIt.Models.Usuario>

@{
    ViewData["Title"] = "Usuários";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h1 class="mb-0">Lista de Usuários</h1>
        </div>
        <div class="card-body">
            <p>
                <a asp-action="Create" class="btn btn-success">Criar Novo Usuário</a>
            </p>
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.UsuarioNome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UsuarioTelefone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UsuarioEmail)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UsuarioSenha)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.UsuarioNome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UsuarioTelefone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UsuarioEmail)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UsuarioSenha)
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.UsuarioId" class="btn btn-warning btn-sm">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.UsuarioId" class="btn btn-info btn-sm">Detalhes</a>
                                <a asp-action="Delete" asp-route-id="@item.UsuarioId" class="btn btn-danger btn-sm">Deletar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer bg-light text-right">
            <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
